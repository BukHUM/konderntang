# Ignore everything by default
/*
!.gitignore
!README.md

# But include these directories
!/wp-content/
/wp-content/*
!/wp-content/plugins/
/wp-content/plugins/*
!/wp-content/plugins/image-optimization/
!/wp-content/themes/
!/wp-content/themes/konderntang/
!/wp-content/themes/trendtoday/
/wp-content/themes/*

# Ignore common WordPress files
/.htaccess
/wp-config.php
/wp-config-sample.php
!wp-config.production.example.php
/xmlrpc.php
/license.txt
/readme.html

# Ignore node_modules and build files
node_modules/
*.log
.DS_Store
Thumbs.db

# Ignore IDE files
.vscode/
.idea/
*.swp
*.swo
*~

# Ignore uploads and cache
/wp-content/uploads/
/wp-content/cache/
/wp-content/upgrade/
/wp-content/backup-db/
/wp-content/backups/

# Keep the structure but ignore other plugins/themes
/wp-content/plugins/*/
!/wp-content/plugins/image-optimization/
!/wp-content/themes/konderntang/
!/wp-content/themes/trendtoday/
/wp-content/themes/*/
